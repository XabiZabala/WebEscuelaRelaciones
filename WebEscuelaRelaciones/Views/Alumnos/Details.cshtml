@model WebEscuelaRelaciones.Models.Alumno

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInscripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInscripcion)
        </dd>
        
        <!--Para mostrar los títulos de curso y grado a los que está apuntado el alumno-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscripciones)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Título curso</th>
                    <th>Grado</th>
                </tr>
                @foreach (var item in Model.Inscripciones)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grado)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Index">Volver</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.AlumnoID">Editar</a>
</div>
